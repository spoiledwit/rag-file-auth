# FastAPI RAG Configuration
# Copy this to .env and fill in your values

# Server Configuration
HOST=0.0.0.0
PORT=8001
DEBUG=True

# Pinecone Configuration (Required - from Django rag_utils.py)
PINECONE_API_KEY=your_pinecone_api_key_here

# Model Configuration (matches Django settings)
EMBEDDING_MODEL=BAAI/bge-small-en
GENERATION_MODEL=Qwen/Qwen2.5-3B-Instruct

# Processing Configuration
CHUNK_SIZE=300
CHUNK_OVERLAP=50
RETRIEVAL_K=10

# File Processing
MAX_FILE_SIZE_MB=50
TEMP_DIR=temp_files
EXTRACTED_TEXTS_DIR=extracted_texts
USE_OCR=True
ENABLE_GPU=True

